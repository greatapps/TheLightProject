<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".ForgetPasswordActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/login_header"
        android:background="@drawable/login_header">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/right_light_logo_black"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:text="Reset Password"
            android:id="@+id/login_text"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/login_header"
        android:id="@+id/register_input_view"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:id="@+id/register_input_view_email"
            >
            <LinearLayout
                android:layout_width="180dp"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:background="@drawable/login_input_background"
                android:elevation="10dp"
                android:layout_marginTop="70dp"
                android:layout_marginHorizontal="30dp"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_email_black_24dp"
                    android:text="Country Code"
                    android:gravity="center_vertical"
                    android:layout_weight="6"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:id="@+id/country_code_fp"
                    android:background="@null"
                    android:inputType="number"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:hint="+1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/login_input_background"
                android:elevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_email_black_24dp"
                    android:layout_weight="0.7"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:layout_marginStart="5dp"
                    android:id="@+id/email_fp"
                    android:layout_marginEnd="10dp"
                    android:hint=" Registerd Email/Phone"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible"

            android:id="@+id/register_input_view_password"
            >
            <LinearLayout
                android:layout_width="180dp"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:background="@drawable/login_input_background"
                android:elevation="10dp"
                android:layout_marginTop="70dp"
                android:layout_marginHorizontal="30dp"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_email_black_24dp"
                    android:text="Enter OTP"
                    android:gravity="center"
                    android:layout_weight="5"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:background="@null"
                    android:id="@+id/fp_otp"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:inputType="number"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:hint="000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/login_input_background"
                android:elevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/key_password"
                    android:layout_weight="0.7"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:layout_marginStart="5dp"
                    android:id="@+id/password_fp"
                    android:layout_marginEnd="10dp"
                    android:hint="Create New Password"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_alignParentBottom="true"
        android:text="Next"
        android:textColor="#000000"
        android:textSize="18dp"
        android:id="@+id/login_button_fp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/login_button_background"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:gravity="center"
        android:layout_height="20dp">

    </LinearLayout>
</RelativeLayout>